{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2015", "scripthost"],
    "outDir": "./output",
    "declarationDir": "./output",
    "declaration": true
  },
  "include": ["src/"],
  "exclude": ["output", "package.json"]
}
